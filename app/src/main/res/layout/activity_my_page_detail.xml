<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back01"
    tools:context=".activities.MyPageDetail">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/my_page_detail_backBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/holo_blue_dark"
            android:padding="5dp"
            android:src="@drawable/ic_back_white" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="12dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/editext_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1111111"
                android:layout_marginTop="6dp"/>
            <EditText
                android:id="@+id/editext_2"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"/>
            <EditText
                android:id="@+id/editext_3"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="textPassword"/>
            <EditText
                android:id="@+id/editext_4"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dia Chi"/>
            <EditText
                android:id="@+id/editext_5"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>

            <EditText
                android:id="@+id/editext_6"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                />
            <EditText
                android:id="@+id/editext_7"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/my_page_detail_fg_btn_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:text="Clear"/>
            <Button
                android:id="@+id/my_page_detail_fg_btn_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:text="Update"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>