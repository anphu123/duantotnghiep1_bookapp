<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tab_background_selected"
    tools:context=".activities.Payment">

    <!-- ImageView for background -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" /> <!-- Adjust scale type as needed -->

    <!-- Your existing layout content -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="16dp"
        android:background="@drawable/tab_background_selected">

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/textViewPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:layout_below="@id/textViewName"
            android:layout_marginBottom="8dp"
            android:textSize="16sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/textViewContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Content"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:layout_below="@id/textViewPrice"
            android:layout_marginBottom="8dp"
            android:textSize="16sp"
            android:textColor="#000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewContent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="6dp"
                android:textSize="18sp"
                android:padding="12dp"
                android:text="Huy Bo"
                android:backgroundTint="#b0006d" /> <!-- Pink color -->

            <Button
                android:id="@+id/momo_confirm_payment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:layout_margin="6dp"
                android:textSize="18sp"
                android:padding="12dp"
                android:text="Xac Nhan"
                android:backgroundTint="#b0006d" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
